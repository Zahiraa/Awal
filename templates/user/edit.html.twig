{% extends 'public.html.twig' %}

{% block title %}
	{{ 'myProfile.edit.title'|trans }}
{% endblock %}

{% block content %}


	<div
		class="min-h-screen bg-gray-50 flex">
		<!-- Main Content Area -->
		<div
			class="max-w-7xl mx-auto px-4 py-16 flex-1">
			<!-- Header -->
			<div class="mb-8">
				<h1 class="text-2xl font-semibold text-gray-900 mb-2">{{ 'myProfile.description'|trans }}</h1>
				<p class="text-gray-600">{{ 'myProfile.edit.description'|trans }}</p>
			</div>
			<hr
			class="mt-3 mb-5 border-b border-gray-200" style="border-color: #EAECF0;">
			<!-- Form Card -->
			<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 w-full max-w-full mx-auto">
				{{ form_start(form, {'attr': {'class': 'space-y-4 md:space-y-5 __web-inspector-hide-shortcut__'}}) }}
				<!-- Name Fields Row -->
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<div>
						<label for="prenom" class="block text-sm font-medium text-gray-700 mb-2">{{ 'myProfile.prenom'|trans }}</label>
						{{ form_widget(form.prenom) }}
					</div>
					<div>
						<label for="nom" class="block text-sm font-medium text-gray-700 mb-2">{{ 'myProfile.nom'|trans }}</label>
						{{ form_widget(form.nom) }}
					</div>
				</div>

				<!-- Email Field -->
				<div>
					<label for="email" class="block text-sm font-medium text-gray-700 mb-2">{{ 'myProfile.email'|trans }}</label>
					<div class="relative">
						<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
							<svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8m0 0l-7.89 5.26a2 2 0 00-2.22 0L3 8m0 0h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
							</svg>
						</div>
						<input type="email" id="email" name="email" value="{{ user.email }}" disabled class="w-full pl-10 pr-3 py-2 bg-gray-100 border border-gray-300 rounded-md shadow-sm text-sm md:text-base focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500"/>
					</div>
				</div>

				<!-- Action Buttons -->
				<div class="flex flex-wrap  items-start gap-4  md:justify-end space-x-3 pt-4">
					<a href="{{ path('app_user_show',{id:user.id}) }}">
						<button type="button" class="px-4 py-2 border hover:cursor-pointer border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500">
							{{ 'myProfile.edit.cancel'|trans }}
						</button>
					</a>
					<button type="submit" class="hover:bg-teal-700 hover:cursor-pointer focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500 px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-pink-600 hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500">
						{{ 'myProfile.edit.submit'|trans }}
					</button>
				</div>


				{{ form_end(form) }}
			</div>
		</div>
	</div>

	{#        <!-- Right Sidebar -->#}
{#    </div>#}
	{#   #}
{% endblock %}
