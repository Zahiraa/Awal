{% extends 'public.html.twig' %}

{% block title %}
	{{ 'myProfile.title'|trans }}
{% endblock %}

{% block content %}
	<div
		class="min-h-screen bg-gray-50 flex">
		<!-- Main Content Area -->
		<div class="max-w-7xl mx-auto px-4 py-16 flex-1">
			<div
				class="">
				<!-- Header -->
				<div class="mb-8">
					<h1 class="text-2xl font-semibold text-gray-900 mb-2">{{ 'myProfile.title'|trans }}</h1>
					<p class="text-gray-600">{{ 'myProfile.description'|trans }}</p>
				</div>

				{% for message in app.flashes('success') %}
					{% include 'components/alert.html.twig' with {
                        'type': 'success',
                        'message':  message
                    } %}
				{% endfor %}
				<hr
				class="mt-3 mb-5 border-b border-gray-200" style="border-color: #EAECF0;">
				<!-- Form Card -->
				<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 w-full max-w-full mx-auto">

					<div
						class="space-y-6">
						<!-- Name Fields Row -->
						<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
							<div>
								<label for="prenom" class="block text-sm font-medium text-gray-700 mb-2">{{ 'myProfile.prenom'|trans }}</label>
								<p id="prenom" class="text-gray-800 text-base">
									{{ user.prenom }}</p>
							</div>
							<div>
								<label for="nom" class="block text-sm font-medium text-gray-700 mb-2">{{ 'myProfile.nom'|trans }}</label>
								<p id="nom" class="text-gray-800 text-base">{{ user.nom }}</p>

							</div>
						</div>

						<!-- Email Field -->
						<div>
							<label for="email" class="block text-sm font-medium text-gray-700 mb-2">{{ 'myProfile.email'|trans }}</label>
							<div class="relative">
								<p id="email" class="text-gray-800 text-base">{{ user.email }}</p>
							</div>
						</div>

						<!-- Action Buttons -->
						<div class="flex justify-end space-x-3 pt-4">

							<a href="{{ path('app_user_edit', {'id': user.id}) }}">
								<button type="submit" class="hover:bg-teal-700 hover:cursor-pointer focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500 px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-teal-600 hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500">
									{{ 'myProfile.edit.label'|trans }}
								</button>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
