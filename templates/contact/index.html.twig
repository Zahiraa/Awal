{% extends 'public.html.twig' %}

{% block title %}{{ 'ContactSection.page.mainTitle'|trans }}{% endblock %}

{% block page_content %}
    <div class="flex-1 flex flex-col">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 py-26">
            <!-- Header Section -->
            <div class="bg-white">
                <div class="text-center">
                    <h1 class="text-4xl font-semibold text-teal-600 mb-4">  {{ 'ContactSection.page.mainTitle'|trans }}</h1>
                    <p class="text-gray-600 text-lg max-w-2xl mx-auto leading-relaxed">
                        {{ 'ContactSection.page.subTitle'|trans|raw }}
                    </p>
                </div>
            </div>

            <!-- Contact Form Section -->
            <div class="py-4">
                <div class="max-w-2xl mx-auto">

                    {{ form_start(form, {'attr': {'class': 'bg-white rounded-lg pt-8'}}) }}
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                            <!-- PrÃ©nom -->
                            <div>
                                {{ form_label(form.prenom, 'ContactSection.page.form.prenom.label'|trans, {
                                    'label_attr': {
                                        'class': 'block text-sm font-medium text-gray-700 mb-2'
                                    }
                                }) }}
                                {{ form_widget(form.prenom, {
                                    'attr': {
                                        'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-colors',
                                    
                                    }
                                }) }}
                                {{ form_errors(form.prenom) }}
                            </div>

                            <!-- Nom -->
                            <div>
                                {{ form_label(form.nom, 'ContactSection.page.form.nom.label'|trans, {
                                    'label_attr': {
                                        'class': 'block text-sm font-medium text-gray-700 mb-2'
                                    }
                                }) }}
                                {{ form_widget(form.nom, {
                                    'attr': {
                                        'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-colors',
                                    
                                    }
                                }) }}
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="mb-6">
                            {{ form_label(form.email, 'ContactSection.page.form.email.label'|trans, {
                                'label_attr': {
                                    'class': 'block text-sm font-medium text-gray-700 mb-2'
                                }
                            }) }}
                            {{ form_widget(form.email, {
                                'attr': {
                                    'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-colors',
                                }
                            }) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <!-- Sujet -->
                        <div class="mb-6">
                            {{ form_label(form.subject,  'ContactSection.page.form.subject.label'|trans, {
                                'label_attr': {
                                    'class': 'block text-sm font-medium text-gray-700 mb-2'
                                }
                            }) }}
                            {{ form_widget(form.subject, {
                                'attr': {
                                    'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-colors',
                                }
                            }) }}
                            {{ form_errors(form.subject) }}
                        </div>

                        <!-- Message -->
                        <div class="mb-6">
                            {{ form_label(form.message,  'ContactSection.page.form.message.label'|trans, {
                                'label_attr': {
                                    'class': 'block text-sm font-medium text-gray-700 mb-2'
                                }
                            }) }}
                            {{ form_widget(form.message, {
                                'attr': {
                                    'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-colors resize-vertical',
                                    'rows': 5
                                }
                            }) }}
                            {{ form_errors(form.message) }}
                        </div>

                        <!-- Privacy Policy -->
                        <div class="mb-6">
                            <div class="flex items-start">
                                {{ form_widget(form.agreeTerms, {
                                    'attr': {
                                        'class': 'mt-1 h-4 w-4 text-teal-600 focus:ring-teal-500 border-gray-300 rounded'
                                    }
                                }) }}

                            </div>
                            {{ form_errors(form.agreeTerms) }}
                            <div class="mt-5 ">
                                <a href="{{ path('conditions_generales') }}" target="_blank" class="mx-3 text-teal-600 hover:text-teal-700 underline">
                                    {{ 'ContactSection.page.form.conditions.label'|trans }}
                                </a>
                            </div>
                        </div>
                    <div class="mb-6">
                        {{ form_row(form.recaptcha) }}
                        {{ form_errors(form.recaptcha) }}
                    </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="w-full hover:cursor-pointer bg-teal-600 hover:bg-teal-700 text-white font-medium py-3 px-6 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2">
                                 {{ 'ContactSection.page.form.button'|trans }}
                            </button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}