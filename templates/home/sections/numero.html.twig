<!-- Current Issue Section -->
<section id="current" class="py-24 bg-white">
	<div class="max-w-7xl mx-auto px-6">
		<h2 class="text-5xl font-bold text-center mb-4">
			<span class="pink-underline">العدد الحالي</span>
		</h2>
		<div
			class="grid grid-cols-1 lg:grid-cols-2 gap-12 mt-16">
			<!-- Images Column -->
			<div class="space-y-8">
				<a href="{{ path('app_opinion_show_front', {'id': opinion.id}) }}" class="text-right flex-1 block group">
					<div class="rounded-3xl overflow-hidden shadow-custom-lg">
						<img src="{{ asset('uploads/' ~ opinion.image.name) }}" alt="nawal" class="w-full h-[50vh] md:h-[70vh] object-cover object-top"/>
					</div>
				</a>
				<div class="rounded-3xl overflow-hidden shadow-custom-lg">

					<img src="{{ asset('build/images/home/awal.jpeg') }}" alt="Magazine" class="w-full h-[50vh] md:h-[75vh] object-cover"/>
				</div>
			</div>

			<!-- Content List -->
			<div class="space-y-4">
				<div class="bg-[linear-gradient(135deg,#FFF1F2_0%,rgba(255,228,230,0.5)_100%)] border border-[#FECDD3] rounded-2xl p-6 flex items-center gap-4 justify-between">
					<a href="{{ path('app_opinion_show_front', {'id': opinion.id}) }}" class="text-right flex-1 block group">
						<h3 class="text-2xl font-bold mb-2 group-hover:text-rose-600 transition-colors">{{ opinion.title }}</h3>
						<p class="text-gray-600">
							{{ opinion.subTitle }}</p>
					</a>
					<div class="flex-shrink-0 w-10 h-10 flex items-center justify-center">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-rose-500 w-6 h-6">
							<path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/>
							<path d="m15 5 4 4"/>
						</svg>
					</div>
				</div>
				{% if contenuDiscussion is defined and contenuDiscussion is not empty %}
					<div class="bg-[linear-gradient(135deg,#F9FAFB_0%,#FFFFFF_100%)] border border-[#E5E7EB] p-6 rounded-2xl flex items-center gap-4 justify-between border-gray-100">
						<a href="{{ path('app_contenu_discussion_show', {'id': contenuDiscussion.id}) }}" class="text-right flex-1 text-rose-600 block group">
							<div class="text-right flex-1">
								<h3 class="text-2xl font-bold mb-2 group-hover:text-rose-600 transition-colors">{{ contenuDiscussion.title }}</h3>
								<p class="text-gray-600">
									{{ contenuDiscussion.subTitle }}
								</p>
							</div>
						</a>
						<div class="flex-shrink-0 w-10 h-10 flex items-center justify-center">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-rose-500 w-6 h-6">
								<path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
							</svg>
						</div>
					</div>
				{% endif %}


				<div class="bg-[linear-gradient(135deg,#FFF1F2_0%,rgba(255,228,230,0.5)_100%)] border border-[#FECDD3] rounded-2xl p-6 flex items-center gap-4 justify-between">
					<a href="{{ path('app_contenu_numero_list', {'id': contenu.id}) }}" class="text-right flex-1 block group">
						<div class="text-right flex-1">
							<h3 class="text-2xl font-bold mb-2 group-hover:text-rose-600 transition-colors">ملف العدد</h3>
							<p class="text-gray-600">
								{{ contenu.title }}
							</p>
						</div>
					</a>
					<div class="flex-shrink-0 w-10 h-10 flex items-center justify-center">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-rose-500 w-6 h-6">
							<path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path>
							<polyline points="14 2 14 8 20 8"></polyline>
						</svg>
					</div>
				</div>


				<div class={% if contenuDiscussion is defined and contenuDiscussion is not empty %} "bg-[linear-gradient(135deg,#F9FAFB_0%,#FFFFFF_100%)] border border-[#E5E7EB] p-6 rounded-2xl flex items-center gap-4 justify-between border-gray-100" {%else%} "bg-[linear-gradient(135deg,#FFF1F2_0%,rgba(255,228,230,0.5)_100%)] border border-[#FECDD3] rounded-2xl p-6 flex items-center gap-4 justify-between" {%endif%}>
					<div class="text-right flex-1">
						<h3 class="text-2xl font-bold mb-2">نصوص أوال فيمينا</h3>
						<p class="text-gray-600">
							مجموعة من النصوص الأدبية والإبداعية المميزة
						</p>
					</div>
					<div class="flex-shrink-0 w-10 h-10 flex items-center justify-center">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-rose-500 w-6 h-6">
							<path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
							<path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
						</svg>
					</div>
				</div>

				{% for text in textes %}
					<a href="{{ path('app_texte_show_front', {'id': text.id}) }}" class="group">
						<div class="mt-4 border rounded-2xl p-6 flex items-center gap-4 justify-between shadow-custom hover:opacity-90 transition-all
																																																																															 {{ loop.index is not even ?
																																																																																'bg-[linear-gradient(135deg,#FFF1F2_0%,rgba(255,228,230,0.5)_100%)] border-[#FECDD3]':
																																																																																'bg-[linear-gradient(135deg,#F9FAFB_0%,#FFFFFF_100%)] border-[#E5E7EB]'
																																																																															 }}">
							<div class="text-right flex-1">
								<h3 class="text-2xl font-bold mb-2 group-hover:text-rose-600 transition-colors">{{ text.title }}</h3>
								<p class="text-gray-600">
									{{ text.subTitle }}
								</p>
							</div>

						</div>
					</a>
				{% endfor %}

				{% for audio in audios %}
					<a href="{{ path('app_texte_show_front', {'id': audio.id}) }}" class="group">
						<div class="mt-8 border rounded-2xl p-6 flex items-center gap-4 justify-between shadow-custom hover:opacity-90 transition-all
																																																							 {{ loop.index is not even ?
																																																								'bg-[linear-gradient(135deg,#FFF1F2_0%,rgba(255,228,230,0.5)_100%)] border-[#FECDD3]':
																																																								'bg-[linear-gradient(135deg,#F9FAFB_0%,#FFFFFF_100%)] border-[#E5E7EB]'
																																																							 }}">
							<div class="text-right flex-1">
								<div class="flex items-center justify-end gap-2 mb-2">
									<h3 class="text-2xl font-bold group-hover:text-rose-600 transition-colors">{{ audio.title }}</h3>
								</div>
								<p class="text-gray-600">
									{{ audio.subTitle }}
								</p>
							</div>
							<div class="flex-shrink-0 w-10 h-10 flex items-center justify-center">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-rose-500 w-6 h-6">
									<path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"></path>
									<path d="M19 10v1a7 7 0 0 1-14 0v-1"></path>
									<line x1="12" y1="19" x2="12" y2="23"></line>
									<line x1="8" y1="23" x2="16" y2="23"></line>
								</svg>
							</div>
						</div>
					</a>
				{% endfor %}


			</div>
		</div>
	</div>
</section>
