<!-- Opinion Writers Section -->
<section class="py-24 bg-gray-50">
	<div class="max-w-7xl mx-auto px-6">
		<h2 class="text-5xl font-bold text-center mb-4">
			<span class="pink-underline">كتاب الرأي</span>
		</h2>
		<p class="text-center text-gray-600 text-xl mb-16">
			أصوات مبدعة من مختلف أنحاء العالم
		</p>

		<div
			class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			<!-- Writer Card -->
			{% for author in authors %}
				<a href="{{ path('article_author', {'id': author.id}) }}">
					<div class="bg-white rounded-2xl p-8 shadow-custom hover:shadow-custom-lg transition text-center">
						<div class="bg-gradient-to-br from-rose-400 to-rose-600 w-24 h-24 rounded-full mx-auto mb-6 flex items-center justify-center overflow-hidden">
							{% if author.image %}
								<img src="{{ asset('uploads/' ~ author.image.name) }}" alt="{{ author.name }}" class="w-full h-full object-cover"/>
							{% else %}
								<img src="https://ui-avatars.com/api/?name={{ author.name|url_encode }}&background=fb7185&color=fff&size=128" alt="{{ author.name }}" class="w-full h-full object-cover"/>
							{% endif %}
						</div>
						<h3 class="text-2xl font-bold mb-2">{{ author.name }}</h3>
						<p class="text-gray-600 mb-4">{{ author.nameFr }}</p>
						<div class="bg-rose-50 text-rose-500 px-4 py-2 rounded-full inline-flex items-center gap-2 mb-6">
							<svg class="w-4 h-4" fill="currentColor" viewbox="0 0 24 24">
								<path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
							</svg>
							<span>{{ author.country }}</span>
						</div>
						<hr class="border-rose-200"/>
					</div>
				</a>
			{% endfor %}

		</div>
	</div>
</section>
