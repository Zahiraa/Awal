{% extends 'auth.html.twig' %}

{% block title %} {{ 'resetPassword.title'|trans }}{% endblock %}

{% block content %}
    <div id="loginForm" class="form-container max-w-md mx-auto w-full">
        <img src="{{ asset('build/images/auth/icons/reset-password-mail.svg') }}" alt="reset-password" class="mb-4 mx-auto" />

        <h1 class="text-2xl text-center md:text-3xl font-bold text-midnight mb-3">
           {{ 'resetPassword.messageAfterSubmit.title'|trans }}
        </h1>
        <p class="text-steel mb-6 md:mb-8 text-sm md:text-base text-center">
              {{ 'resetPassword.messageAfterSubmit.message'|trans }}
              {{ 'resetPassword.messageAfterSubmit.expirationLink'|trans }} {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
        </p>
        <p class="mt-6 text-center text-steel text-sm md:text-base">
            <a href="{{ path('app_login') }}" class="text-grey-600 hover:text-primary-700 font-medium flex items-center justify-center gap-2">
                <img src="{{ asset('build/images/auth/icons/password.svg') }}" alt="reset-password" class="inline-block" />
                {{ 'resetPassword.backToLogin'|trans }}
            </a>
        </p>
    </div>
{% endblock %}
