{% extends 'auth.html.twig' %}

{% block title %} {{ 'Navbar.seConnecter'|trans }}{% endblock %}

{% block content %}
    <div id="loginForm" class="form-container max-w-md mx-auto w-full">


        <h1 class="text-2xl md:text-3xl font-semibold text-midnight mb-3">
            {{ 'login.title'|trans }}
        </h1>
        <p class="text-steel mb-6 md:mb-8 text-lg">
               {{ 'login.subtitle'|trans }}
        </p>

        {#    Example usage of different alert types } #}
        {#    Error Alert #}
        {#     {% include 'components/alert.html.twig' with { #}
        {#        'type': 'error', #}
        {#        'message': 'error' #}
        {#    } %} #}

        {#     Warning Alert #}
        {#    {% include 'components/alert.html.twig' with { #}
        {#        'type': 'warning', #}
        {#        'message': 'warning' #}
        {#    } %} #}

        {#    Success Alert #}
        {#    {% include 'components/alert.html.twig' with { #}
        {#        'type': 'success', #}
        {#        'message': 'success' #}
        {#    } %} #}


        <form class="space-y-4 md:space-y-5" method="post">

            <div class="space-y-2">
                <label for="login__username" class="block text-sm text-gray-700 required">
                      {{ 'login.email.label'|trans }}
                    <span class="text-error-500 ml-1 ">*</span>
                </label>
                <input type="email" value="{{ last_username }}" name="_username" id="username"
                       class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-600 focus:border-transparent text-sm md:text-base placeholder-gray-500 h-[44px] "
                       autocomplete="email" required autofocus>
            </div>


            <div class="space-y-2"><label for="login__password" class="block text-sm text-gray-700 required">
                       {{ 'login.password.label'|trans }}
                    <span class="text-error-500 ml-1 ">*</span>
                </label>
                <input type="password" name="_password" id="password" autocomplete="current-password" required
                       class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-600 focus:border-transparent text-sm md:text-base placeholder-gray-500 h-[44px] ">
                <a class="block cursor-pointer text-right text-primary-700 hover:text-primary-700 font-medium"
                   href="{{ path('app_forgot_password_request') }}">
                      {{ 'login.forgotPassword'|trans }}
                </a>
            </div>


            <input type="hidden" name="_csrf_token" data-controller="csrf-protection"
                   value="{{ csrf_token('authenticate') }}">


            <button class="w-full cursor-pointer bg-primary-600 text-white py-2.5 px-4 rounded-lg font-medium hover:bg-primary-700 active:bg-primary-700 transition duration-200 text-sm md:text-base focus:outline-none focus:ring-2 focus:ring-primary-600 focus:ring-offset-2"
                    type="submit">
                 {{ 'login.button'|trans }}
            </button>
        </form>

        <div class="mt-4 md:mt-6 text-center">
            <p class="text-steel text-sm md:text-base">
                    {{ 'login.noAccount'|trans }}
                <a href="{{ path('app_register') }}" class="text-primary-700 hover:text-primary-700 font-medium">
                      {{ 'login.register'|trans }}
                </a>
            </p>
        </div>
    </div>
{% endblock %}
