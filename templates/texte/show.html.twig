{% extends 'admin.html.twig' %}

{% block title %}
	{{ texte.title }}
{% endblock %}

{% block content %}
	<div
		class="flex-1 flex flex-col bg-gray-50 px-4">
		<!-- Header -->
		<header class="bg-white py-6 border-b border-gray-200">
			<div class="flex flex-wrap justify-between items-center gap-4">
				<div>
					<h1 class="text-2xl font-semibold text-gray-900">
						نصوص آوال فيمينا
					</h1>
				</div>
				<div class="flex items-center space-x-3">
					<a href="{{ path('app_texte_index') }}" class="flex items-center cursor-pointer px-4 py-2 bg-white border border-light-gray-100 text-gray-700 rounded-lg hover:bg-gray-100">
						Retour
					</a>
					<a href="{{ path('app_texte_edit', {'id': texte.id}) }}" class="flex items-center cursor-pointer px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700">
						Modifier
						<svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
						</svg>
					</a>
				</div>
			</div>
			<hr class="text-gray-300 mt-4 mb-2">
		</header>

		<!-- Content -->
		<div class="flex-1 p-6">
			<div
				class="max-w-4xl mx-auto">
				<!-- Texte Header -->
				<div class="bg-white rounded-lg shadow-sm p-6 mb-6">
					<div class="flex items-start justify-between">
						<div class="flex-1">
							<h2 class="text-3xl font-bold text-gray-900 mb-2">{{ texte.title }}</h2>
							{% if texte.subTitle %}
								<p class="text-xl text-gray-600 mb-4">{{ texte.subTitle }}</p>
							{% endif %}

							<div class="flex items-center space-x-4 text-sm text-gray-500">
								<span>Créé le
									{{ texte.createdAt ? texte.createdAt|date('d/m/Y à H:i') : 'Non défini' }}</span>
								{% if texte.updatedAt %}
									<span>• Modifié le
										{{ texte.updatedAt|date('d/m/Y à H:i') }}</span>
								{% endif %}
							</div>

							<!-- Status Badge -->
							<div class="mt-4">
								{% if texte.statut == 'published' %}
									<span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
										<svg class="w-4 h-4 mr-2" fill="currentColor" viewbox="0 0 8 8">
											<circle cx="4" cy="4" r="3"/>
										</svg>
										Publié
									</span>
								{% elseif texte.statut == 'draft' %}
									<span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
										<svg class="w-4 h-4 mr-2" fill="currentColor" viewbox="0 0 8 8">
											<circle cx="4" cy="4" r="3"/>
										</svg>
										Brouillon
									</span>
								{% else %}
									<span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
										{{ texte.statut }}
									</span>
								{% endif %}
							</div>
						</div>

						<!-- Image -->
						{% if texte.image %}
							<div class="ml-6">
								<img src="{{ '/uploads/' ~ texte.image.name }}" alt="{{ texte.title }}" class="w-32 h-32 rounded-lg object-cover shadow-sm">
							</div>
						{% endif %}
					</div>
				</div>

				<!-- Content -->
				{% if texte.content %}
					<div class="bg-white rounded-lg shadow-sm p-6 mb-6">
						<div class="prose prose-lg max-w-none">
							{{ texte.content|raw }}
						</div>
					</div>
				{% endif %}

				<!-- Media -->
				{% if texte.media %}
					<div class="bg-white rounded-lg shadow-sm p-6">
						<h3 class="text-lg font-semibold text-gray-900 mb-4">Média</h3>
						<div class="flex items-center justify-center">
							{% set audioExtensions = ['mp3', 'wav', 'ogg', 'aac', 'flac'] %}
							{% set videoExtensions = ['mp4', 'avi', 'mov', 'wmv', 'flv', 'webm'] %}
							{% if texte.media.extension in audioExtensions %}
								<audio controls class="w-full max-w-md mx-auto rounded-2xl shadow-lg bg-white p-4 ring-1 ring-rose-100 hover:ring-rose-200 transition-all">
									<source src="/uploads/{{ texte.media.name }}" type="audio/{{ texte.media.extension }}">
									Votre navigateur ne supporte pas l'élément audio.
								</audio>
							{% elseif texte.media.extension in videoExtensions %}
								<video controls class="w-full max-h-[500px] rounded-2xl shadow-xl ring-1 ring-gray-200 hover:ring-rose-300 transition-all" preload="metadata">
									<source src="/uploads/{{ texte.media.name }}" type="video/{{ texte.media.extension }}">
									Votre navigateur ne supporte pas l'élément vidéo.
								</video>
							{% else %}
								<div class="text-center">
									<a href="/uploads/{{ texte.media.name }}" target="_blank" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-pink-600 bg-primary-50 hover:bg-primary-100">
										<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
										</svg>
										Télécharger
										{{ texte.media.name }}
									</a>
								</div>
							{% endif %}
						</div>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
