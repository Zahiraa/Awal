{% extends 'admin.html.twig' %}

{% block title %}Opinion index{% endblock %}

{% block content %}
    <h1>رأينا</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>SubTitle</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for opinion in opinions %}
            <tr>
                <td>{{ opinion.id }}</td>
                <td>{{ opinion.title }}</td>
                <td>{{ opinion.content }}</td>
                <td>{{ opinion.subTitle }}</td>
                <td>{{ opinion.createdAt ? opinion.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ opinion.updatedAt ? opinion.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_opinion_show', {'id': opinion.id}) }}">show</a>
                    <a href="{{ path('app_opinion_edit', {'id': opinion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_opinion_new') }}">Create new</a>
{% endblock %}
