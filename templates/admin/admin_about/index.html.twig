{% extends 'admin.html.twig' %}

{% block title %}من نحن{% endblock %}

{% block content %}
    <!-- Main Content -->
    <div class="flex-1 flex flex-col bg-gray-50">
        <!-- Header -->
        <header class="bg-white py-6 border-b border-gray-200">
            <div class="flex flex-wrap justify-between items-center gap-4">
                <div>
                    <h1 class="text-2xl font-semibold text-gray-900">
                       من نحن
                    </h1>
                </div>
                {% if documents|length == 0 %}
                <a href="{{ path('app_admin_about_new') }}"
                   class="bg-teal-600 text-white px-4 py-2 rounded-lg flex items-center hover:bg-teal-700 transition duration-200">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"></path>
                    </svg>
                    Créer une page À propos
                </a>
                {% endif %}
            </div>
            <hr class="text-gray-300 mt-4 mb-2">
        </header>

        <!-- Table -->
        <div class="pb-8">
            <div class="bg-white rounded-lg table-box-shadow overflow-hidden">
                {% if documents|length > 0 %}
                    <!-- Responsive Table with Horizontal Scroll -->
                    <div class="overflow-x-auto">
                        <table class="w-full min-w-[800px]">
                            <thead class="bg-light-gray-300 border-b border-t border-light-gray-200 rounded-t-lg">
                            <tr>
                                <th class="px-6 py-3 text-right text-xs font-medium text-gray-600 tracking-wider whitespace-nowrap">
                                    العنوان
                                </th>
                                <th class="px-6 py-3 text-right text-xs font-medium text-gray-600 tracking-wider whitespace-nowrap">
                                    الصورة
                                </th>
                                <th class="px-6 py-3 text-right text-xs font-medium text-gray-600 tracking-wider whitespace-nowrap">
                                    تاريخ الإنشاء
                                </th>
                                <th class="px-6 py-3 text-right text-xs font-medium text-gray-600 tracking-wider whitespace-nowrap">
                                    تاريخ التحديث
                                </th>
                                <th class="px-6 py-3 text-right text-xs font-medium text-gray-600 tracking-wider whitespace-nowrap">
                                    الإجراءات
                                </th>
                            </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                            {% for document in documents %}
                                <tr class="hover:bg-gray-50 transition duration-150 border-b border-light-gray-200">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900 max-w-[200px] truncate">
                                            {{ document.title }}
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {% if document.image %}
                                            <img src="{{ '/uploads/' ~ document.image.name }}" alt="{{ document.title }}" class="w-12 h-12 rounded-lg object-cover">
                                        {% else %}
                                            <div class="w-12 h-12 rounded-lg bg-gray-100 flex items-center justify-center">
                                                <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                                </svg>
                                            </div>
                                        {% endif %}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900 max-w-[200px] truncate">
                                            {{ document.createdAt ? document.createdAt|date('d/m/Y à H:i') : 'Non définie' }}
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900 max-w-[200px] truncate">
                                            {{ document.updatedAt ? document.updatedAt|date('d/m/Y à H:i') : 'Non définie' }}
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <div class="flex items-center space-x-4">
                                            <!-- View Button -->
                                            <a href="{{ path('app_admin_about_show', {'id': document.id}) }}"
                                               class="text-gray-400 hover:text-gray-600 transition duration-150"
                                               title="Voir">
                                                <img src="{{ asset('build/images/icons/eye.svg') }}" alt="Voir" class="w-5 h-5 min-w-4 min-h-4">
                                            </a>

                                            <!-- Edit Button -->
                                            <a href="{{ path('app_admin_about_edit', {'id': document.id}) }}"
                                               class="text-gray-400 hover:text-gray-600 transition duration-150"
                                               title="Modifier">
                                                <img src="{{ asset('build/images/icons/edit.svg') }}" alt="Modifier" class="w-5 h-5 min-w-4 min-h-4">
                                            </a>

                                            <button class="delete-btn text-gray-400 hover:text-red-600 transition duration-150 cursor-pointer"
                                                    title="Supprimer"
                                                    data-document-id="{{ document.id }}"
                                                    data-csrf-token="{{ csrf_token('delete' ~ document.id) }}">
                                                <img src="{{ asset('build/images/icons/trash.svg') }}" alt="Supprimer" class="w-5 h-5 min-w-4 min-h-4">
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <!-- Empty State -->
                    <div class="text-center py-12">
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        <h3 class="mt-2 text-sm font-medium text-gray-900">
                                Aucune page À propos trouvée
                        </h3>
                        <p class="mt-1 text-sm text-gray-600">
                                Créer une page À propos.
                        </p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Delete Modal -->
    <div id="deleteModal" class="fixed inset-0 bg-modal overflow-y-auto h-full w-full hidden z-50 modal-backdrop">
        <div id="modalContent" class="relative top-1/4 mx-auto p-4 md:p-5 modal-box-shadow w-11/12 max-w-sm md:w-96 rounded-md bg-white modal-content">
            <div class="flex justify-between items-start">
                <img src="{{ asset('build/images/icons/delete.svg') }}" alt="Supprimer" class="w-10 h-10 md:w-12 md:h-12">
                <button id="close-modal-btn" class="text-gray-400 hover:text-gray-600 hover:cursor-pointer">
                    <svg class="w-5 h-5 md:w-6 md:h-6" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
            </button>
        </div>
        <div class="mt-3">
            <h3 class="text-base md:text-lg font-medium text-gray-900">Supprimer la page À propos</h3>
            <p class="text-xs md:text-sm text-gray-600 mb-4 md:mb-6">Êtes-vous sûr de vouloir supprimer cette page À propos ? Cette action ne peut pas être annulée.</p>
            <div class="flex flex-col md:flex-row space-y-2 md:space-y-0 md:space-x-4">
                <button id="cancelDeleteBtn" class="px-4 py-2 flex-1 border border-light-gray-100 text-gray-800 text-sm md:text-base font-medium rounded-md hover:bg-gray-50 transition duration-150 cursor-pointer">
                    Annuler
                </button>
                <button id="confirmDeleteBtn" class="px-4 py-2 flex-1 bg-red-600 text-white text-sm md:text-base font-medium rounded-md hover:bg-red-700 transition duration-150 cursor-pointer">
                    Supprimer
                </button>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function initializeDeleteAboutModal() {
            console.log('Initializing delete About modal script');

            // Ensure we don't add multiple event listeners
            if (window.deleteAboutModalInitialized) {
                console.log('Delete About modal already initialized, skipping');
                return;
            }
            window.deleteAboutModalInitialized = true;
            console.log('Delete About modal initialization starting');

            let documentToDelete = null;
            let csrfTokenForDelete = null;
            let isModalAnimating = false;

            function showDeleteModal(documentId) {
                console.log('showDeleteModal called', documentId);
                if (isModalAnimating) return;

                documentToDelete = documentId;
                const deleteButton = document.querySelector(`[data-document-id="${documentId}"]`);
                csrfTokenForDelete = deleteButton ? deleteButton.dataset.csrfToken : null;

                console.log('Modal data:', { documentToDelete, csrfTokenForDelete });

                const modal = document.getElementById('deleteModal');
                const modalContent = document.getElementById('modalContent');

                if (!modal || !modalContent) {
                    console.error('Modal elements not found');
                    return;
                }

                // Show modal and start animation
                modal.classList.remove('hidden');
                modal.classList.add('modal-entering');
                modalContent.classList.add('modal-entering');

                isModalAnimating = true;

                // After a small delay, transition to entered state
                requestAnimationFrame(() => {
                    modal.classList.remove('modal-entering');
                    modal.classList.add('modal-entered');
                    modalContent.classList.remove('modal-entering');
                    modalContent.classList.add('modal-entered');

                    setTimeout(() => {
                        isModalAnimating = false;
                    }, 300);
                });
            }

            function hideDeleteModal() {
                console.log('hideDeleteModal called');
                if (isModalAnimating) return;

                const modal = document.getElementById('deleteModal');
                const modalContent = document.getElementById('modalContent');

                if (!modal || !modalContent) return;

                isModalAnimating = true;

                // Start exit animation
                modal.classList.remove('modal-entered');
                modal.classList.add('modal-exiting');
                modalContent.classList.remove('modal-entered');
                modalContent.classList.add('modal-exiting');

                // Use requestAnimationFrame to ensure the exiting state is applied, then transition to exited
                requestAnimationFrame(() => {
                    modal.classList.remove('modal-exiting');
                    modal.classList.add('modal-exited');
                    modalContent.classList.remove('modal-exiting');
                    modalContent.classList.add('modal-exited');

                    // After animation completes, hide modal
                    setTimeout(() => {
                        modal.classList.add('hidden');
                        modal.classList.remove('modal-exited');
                        modalContent.classList.remove('modal-exited');

                        documentToDelete = null;
                        csrfTokenForDelete = null;
                        isModalAnimating = false;
                    }, 300);
                });
            }

            function deleteItem() {
                console.log('deleteItem called');
                if (documentToDelete && csrfTokenForDelete) {
                    // Create a form to submit the delete request
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = `{{ path('app_admin_about_delete', {'id': '__ID__'}) }}`.replace('__ID__', documentToDelete);

                    // Add CSRF token
                    const csrfToken = document.createElement('input');
                    csrfToken.type = 'hidden';
                    csrfToken.name = '_token';
                    csrfToken.value = csrfTokenForDelete;
                    form.appendChild(csrfToken);

                    // Add method override for DELETE
                    const methodInput = document.createElement('input');
                    methodInput.type = 'hidden';
                    methodInput.name = '_method';
                    methodInput.value = 'DELETE';
                    form.appendChild(methodInput);

                    document.body.appendChild(form);
                    form.submit();
                } else {
                    console.log('Missing data for delete:', { documentToDelete, csrfTokenForDelete });
                    hideDeleteModal();
                }
            }

            // Attach event listeners to delete buttons
            const deleteButtons = document.querySelectorAll('.delete-btn');
            console.log('Found delete buttons:', deleteButtons.length);
            deleteButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    console.log('Delete button clicked');
                    e.preventDefault();
                    const documentId = this.dataset.documentId;
                    showDeleteModal(documentId);
                });
            });

            // Attach event listener to close button (X button)
            const closeBtn = document.getElementById('close-modal-btn');
            if (closeBtn) {
                console.log('Close button found, adding listener');
                closeBtn.addEventListener('click', function(e) {
                    console.log('Close button clicked');
                    e.preventDefault();
                    hideDeleteModal();
                });
            }

            // Attach event listener to cancel button
            const cancelBtn = document.getElementById('cancelDeleteBtn');
            if (cancelBtn) {
                console.log('Cancel button found, adding listener');
                cancelBtn.addEventListener('click', function(e) {
                    console.log('Cancel button clicked');
                    e.preventDefault();
                    hideDeleteModal();
                });
            }

            // Attach event listener to confirm button
            const confirmBtn = document.getElementById('confirmDeleteBtn');
            if (confirmBtn) {
                console.log('Confirm button found, adding listener');
                confirmBtn.addEventListener('click', function(e) {
                    console.log('Confirm button clicked');
                    e.preventDefault();
                    deleteItem();
                });
            }

            // Close modal when clicking outside
            const modal = document.getElementById('deleteModal');
            if (modal) {
                modal.addEventListener('click', function (e) {
                    if (e.target === this && !isModalAnimating) {
                        hideDeleteModal();
                    }
                });
            }

            // Escape key to close modal
            document.addEventListener('keydown', function (e) {
                if (e.key === 'Escape' && !isModalAnimating) {
                    const modal = document.getElementById('deleteModal');
                    if (modal && !modal.classList.contains('hidden')) {
                        hideDeleteModal();
                    }
                }
            });
        }

        // Listen for both Turbo load and DOM content loaded
        document.addEventListener('turbo:load', function() {
            console.log('Turbo loaded - Delete About modal script starting');
            initializeDeleteAboutModal();
        });

        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM Content Loaded - Delete About modal script starting');
            initializeDeleteAboutModal();
        });

        // Listen for page show event (for back/forward navigation)
        window.addEventListener('pageshow', function(event) {
            console.log('Page show event - Delete About modal script starting');
            // Reset the flag on pageshow to allow re-initialization
            window.deleteAboutModalInitialized = false;
            initializeDeleteAboutModal();
        });

        // Reset initialization flag on page unload
        document.addEventListener('turbo:before-cache', function() {
            console.log('Turbo before cache - resetting flag');
            window.deleteAboutModalInitialized = false;
        });

        window.addEventListener('beforeunload', function() {
            console.log('Before unload - resetting flag');
            window.deleteAboutModalInitialized = false;
        });
    </script>
{% endblock %}
