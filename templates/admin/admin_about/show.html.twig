{% extends 'admin.html.twig' %}

{% block title %}
	{{ about.title }}
{% endblock %}

{% block content %}

	<div
		class="flex-1 flex flex-col bg-gray-50 px-4">
		<!-- Header -->
		<header class="bg-white py-6 border-b border-gray-200">
			<div class="flex flex-wrap justify-between items-center gap-4">
				<div>
					<h1 class="text-2xl font-semibold text-gray-900">
						Page À propos
					</h1>
				</div>
				<div class="flex items-center space-x-3">
					<a href="{{ path('app_admin_about_index') }}" class="flex  items-center cursor-pointer px-4 py-2 bg-white border border-light-gray-100 text-gray-700 rounded-lg hover:bg-gray-100">
						Retour
					</a>
					<a href="{{ path('app_admin_about_edit', {'id': about.id}) }}" class="flex items-center cursor-pointer px-4 py-2 bg-teal-600 text-white rounded-lg hover:bg-teal-700">
						<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
						</svg>
						Modifier
					</a>
				</div>
			</div>
			<hr class="text-gray-300 mt-4 mb-2">
		</header>
	</div>

	<!-- About Content -->
	<div class="bg-white rounded-lg shadow-sm p-6 mx-6 mt-6">
		<div class="prose prose-lg max-w-none">
			<h1 class="text-3xl font-bold text-gray-900 mb-6">{{ about.title }}</h1>

			{% if about.image %}
				<div class="mb-6">
					<img src="{{ '/uploads/' ~ about.image.name }}" alt="{{ about.title }}" class="w-full max-w-md max-h-120 h-auto rounded-lg shadow-md object-cover object-top">
				</div>
			{% endif %}

			<div class="text-gray-700 leading-relaxed whitespace-pre-line">
				{{ about.content|raw }}
			</div>

			<div class="mt-8 pt-6 border-t border-gray-200">
				<div class="flex flex-wrap gap-4 text-sm text-gray-500">
					<span>Créé le:
						{{ about.createdAt ? about.createdAt|date('d/m/Y à H:i') : 'Non définie' }}</span>
					<span>Dernière modification:
						{{ about.updatedAt ? about.updatedAt|date('d/m/Y à H:i') : 'Non définie' }}</span>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
