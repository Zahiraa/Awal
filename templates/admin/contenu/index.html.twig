{% extends 'admin.html.twig' %}

{% block title %}Contenu index
{% endblock %}
{% import 'macros/status_macros.html.twig' as status %}

{% block content %}
	<!-- Main Content -->
	<div
		class="flex-1 flex flex-col bg-gray-50">
		<!-- Header -->

		<header class="bg-white py-6 border-b border-gray-200">
			<div class="flex flex-wrap justify-between items-center gap-4">
				<div>
					<h1 class="text-2xl font-semibold text-gray-900">
						العدد
					</h1>
				</div>
				<a href="{{ path('app_contenu_new') }}" class="bg-[#A81B60] text-white px-4 py-2 rounded-lg flex items-center hover:bg-teal-700 transition duration-200 mr-4">
					<svg class="w-5 h-5 mr-2" fill="currentColor" viewbox="0 0 20 20">
						<path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"></path>
					</svg>
					اضافة عدد جديد
				</a>
			</div>
			<hr class="text-gray-300 mt-4 mb-2">
		</header>

		<!-- Search Bar -->
		<div class="pt-2 pb-4 rounded-t-lg flex justify-end bg-white mb-[-8px] container-table-box-shadow">
			<div class="relative md:min-w-sm md:max-w-sm">
				<form method="GET" action="{{ path('app_contenu_index') }}" class="flex ">
					<div class="relative w-full">
						<svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="currentColor" viewbox="0 0 20 20">
							<path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"/>
						</svg>
						<input type="text" name="search" value="{{ app.request.get('search') }}" placeholder="Rechercher" class="pl-10 pr-10 py-2 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500"/>
						{% if app.request.get('search') %}
							<a href="{{ path('app_contenu_index') }}" class="absolute hover:filter hover:brightness-125 right-3 top-1/2 transform -translate-y-1/2">
								<img src="{{ asset('build/images/icons/x-close.svg') }}" alt="Effacer" class="w-5 h-5">
							</a>
						{% endif %}
					</div>

				</form>
			</div>
		</div>

		<!-- Table -->
		<div class="pb-8">
			<div
				class="bg-white rounded-lg table-box-shadow overflow-hidden">
				<!-- Responsive Table with Horizontal Scroll -->
				<div class="overflow-x-auto">
					<table class="w-full min-w-[800px]">
						<thead class="bg-light-gray-300 border-b border-t border-light-gray-200 rounded-t-lg">
							<tr>
								<th class="px-6 py-3 text-right text-xs font-medium text-gray-600 tracking-wider whitespace-nowrap">
									العنوان
								</th>
								<th class="px-6 py-3 text-right text-xs font-medium text-gray-600 tracking-wider whitespace-nowrap">
									الحالة
								</th>
								<th class="px-6 py-3 text-right text-xs font-medium text-gray-600 tracking-wider whitespace-nowrap">
									تاريخ الإنشاء
								</th>
								<th class="px-6 py-3 text-right text-xs font-medium text-gray-600 tracking-wider whitespace-nowrap">
									تاريخ التحديث
								</th>
								<th class="px-6 py-3 text-right text-xs font-medium text-gray-600 tracking-wider whitespace-nowrap">
									الإجراءات
								</th>
							</tr>
						</thead>
						<tbody class="bg-white divide-y divide-gray-200">
							{% for contenu in contenus %}
								<tr class="hover:bg-gray-50 transition duration-150 border-b border-light-gray-200">

									<td class="px-6 py-4 whitespace-nowrap">
										<div class="text-sm text-gray-900 max-w-[200px] truncate">
											{{ contenu.title }}
										</div>
									</td>
									<td class="px-6 py-4 whitespace-nowrap">
										{{ status.get_status(contenu.statut) }}
									</td>
									<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
										{{ contenu.createdAt ? contenu.createdAt|date('Y-m-d H:i:s') : '' }}
									</td>
									<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
										{{ contenu.updatedAt ? contenu.updatedAt|date('Y-m-d H:i:s') : '' }}
									</td>
									<td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
										<div class="flex items-center space-x-4">
											<a href="{{ path('app_contenu_show', {'id': contenu.id}) }}" class="text-gray-400 hover:text-gray-600 transition duration-150" title="Voir">
												<img src="{{ asset('build/images/icons/eye.svg') }}" alt="Voir" class="w-5 h-5 min-w-4 min-h-4">
											</a>
											<a href="{{ path('app_contenu_edit', {'id': contenu.id}) }}" class="text-gray-400 hover:text-gray-600 transition duration-150" title="Modifier">
												<img src="{{ asset('build/images/icons/edit.svg') }}" alt="Modifier" class="w-5 h-5 min-w-4 min-h-4">
											</a>

											<button class="delete-btn text-gray-400 hover:text-red-600 transition duration-150 cursor-pointer" title="Supprimer" data-article-id="{{ article.id }}" data-csrf-token="{{ csrf_token('delete' ~ article.id) }}">
												<img src="{{ asset('build/images/icons/trash.svg') }}" alt="Supprimer" class="w-5 h-5  min-w-4 min-h-4">
											</button>
										</div>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="6" class="px-6 py-12 text-center">
										<div class="flex flex-col items-center justify-center">
											<svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewbox="0 0 24 24" stroke="currentColor">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
											</svg>
											<h3 class="mt-2 text-sm font-medium text-gray-900">Aucun résultat trouvé</h3>
											<p class="mt-1 text-sm text-gray-600">Aucun élément à afficher.</p>
										</div>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

	<!-- Delete Modal -->
	<div id="deleteModal" class="fixed inset-0 bg-modal overflow-y-auto h-full w-full hidden z-50 modal-backdrop">
		<div id="modalContent" class="relative top-1/4 mx-auto p-4 md:p-5 modal-box-shadow w-11/12 max-w-sm md:w-96 rounded-md bg-white modal-content">
			<div class="flex justify-between items-start">
				<img src="{{ asset('build/images/icons/delete.svg') }}" alt="Supprimer" class="w-10 h-10 md:w-12 md:h-12">
				<button id="closeModalBtn" class="text-gray-400 hover:text-gray-600 hover:cursor-pointer">
					<svg class="w-5 h-5 md:w-6 md:h-6" fill="currentColor" viewbox="0 0 20 20">
						<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
					</svg>
				</button>
			</div>
			<div class="mt-3">
				<h3 class="text-base md:text-lg font-medium text-gray-900">Supprimer le contenu</h3>
				<p class="text-xs md:text-sm text-gray-600 mb-4 md:mb-6">Êtes-vous sûr de vouloir supprimer ces données ? Cette action ne peut pas être annulée.</p>
				<div class="flex flex-col md:flex-row space-y-2 md:space-y-0 md:space-x-4">
					<button id="cancelDeleteBtn" class="px-4 py-2 flex-1 border border-light-gray-100 text-gray-800 text-sm md:text-base font-medium rounded-md hover:bg-gray-50 transition duration-150 cursor-pointer">
						Annuler
					</button>
					<button id="confirmDeleteBtn" class="px-4 py-2 flex-1 bg-red-600 text-white text-sm md:text-base font-medium rounded-md hover:bg-red-700 transition duration-150 cursor-pointer">
						Supprimer
					</button>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
		function initializeDeleteModal() { // Variables locales pour éviter les conflits avec Turbo
let contenuToDelete = null;
let csrfTokenForDelete = null;
let isModalAnimating = false;

// Nettoyer les anciens event listeners pour éviter les doublons
const existingDeleteBtns = document.querySelectorAll('.delete-btn');
existingDeleteBtns.forEach(btn => {
btn.replaceWith(btn.cloneNode(true));
});

function showDeleteModal(contenuId) {
if (isModalAnimating) 
return;



contenuToDelete = contenuId;
const deleteButton = document.querySelector (`[data-contenu-id="${contenuId}"]`);
csrfTokenForDelete = deleteButton ? deleteButton.dataset.csrfToken : null;

const modal = document.getElementById('deleteModal');
const modalContent = document.getElementById('modalContent');

if (! modal || ! modalContent) 
return;



// Show modal and start animation
modal.classList.remove('hidden');
modal.classList.add('modal-entering');
modalContent.classList.add('modal-entering');

isModalAnimating = true;

// After a small delay, transition to entered state
requestAnimationFrame(() => {
modal.classList.remove('modal-entering');
modal.classList.add('modal-entered');
modalContent.classList.remove('modal-entering');
modalContent.classList.add('modal-entered');

setTimeout(() => {
isModalAnimating = false;
}, 300);
});
}

function hideDeleteModal() {
if (isModalAnimating) 
return;



const modal = document.getElementById('deleteModal');
const modalContent = document.getElementById('modalContent');

if (! modal || ! modalContent) 
return;



isModalAnimating = true;

// Start exit animation
modal.classList.remove('modal-entered');
modal.classList.add('modal-exiting');
modalContent.classList.remove('modal-entered');
modalContent.classList.add('modal-exiting');

// Use requestAnimationFrame to ensure the exiting state is applied, then transition to exited
requestAnimationFrame(() => {
modal.classList.remove('modal-exiting');
modal.classList.add('modal-exited');
modalContent.classList.remove('modal-exiting');
modalContent.classList.add('modal-exited');

// After animation completes, hide modal
setTimeout(() => {
modal.classList.add('hidden');
modal.classList.remove('modal-exited');
modalContent.classList.remove('modal-exited');

contenuToDelete = null;
csrfTokenForDelete = null;
isModalAnimating = false;
}, 300);
});
}

function deleteItem() {
if (contenuToDelete && csrfTokenForDelete) { // Create a form to submit the delete request
const form = document.createElement('form');
form.method = 'POST';
// Utiliser le path Symfony correct pour la suppression de contenu
form.action = `{{ path('app_contenu_delete', {'id': '__ID__'}) }}`.replace('__ID__', contenuToDelete);

// Add CSRF token - use the pre-generated token
const csrfToken = document.createElement('input');
csrfToken.type = 'hidden';
csrfToken.name = '_token';
csrfToken.value = csrfTokenForDelete;
form.appendChild(csrfToken);

// Add method override for DELETE, if needed by your controller (often standard delete forms use POST with hidden method, or just POST + token)
// Check ContenuController: usually delete is POST. If it checks _method, add it.
// Standard Symfony CRUD delete is often POST. But let's add it to be safe or check controller.
// Assuming standard POST delete.

document.body.appendChild(form);
form.submit();
}
hideDeleteModal();
}

// Attacher les événements aux boutons de suppression (après le clonage)
document.querySelectorAll('.delete-btn').forEach(button => {
button.addEventListener('click', function () {
const contenuId = this.dataset.contenuId;
showDeleteModal(contenuId);
});
});

// Événements pour fermer le modal
const closeBtn = document.getElementById('closeModalBtn');
const cancelBtn = document.getElementById('cancelDeleteBtn');
const confirmBtn = document.getElementById('confirmDeleteBtn');
const modal = document.getElementById('deleteModal');

if (closeBtn) 
closeBtn.addEventListener('click', hideDeleteModal);



if (cancelBtn) 
cancelBtn.addEventListener('click', hideDeleteModal);



if (confirmBtn) 
confirmBtn.addEventListener('click', deleteItem);



// Close modal when clicking outside
if (modal) {
modal.addEventListener('click', function (e) {
if (e.target === this && ! isModalAnimating) {
hideDeleteModal();
}
});
}

// Escape key to close modal (une seule fois par initialisation)
const handleEscape = function (e) {
if (e.key === 'Escape' && ! isModalAnimating) {
const modal = document.getElementById('deleteModal');
if (modal && ! modal.classList.contains('hidden')) {
hideDeleteModal();
}
}
};

// Nettoyer l'ancien listener avant d'en ajouter un nouveau
document.removeEventListener('keydown', handleEscape);
document.addEventListener('keydown', handleEscape);
}

// Initialiser au chargement de la page
document.addEventListener('DOMContentLoaded', initializeDeleteModal);

// Initialize on turbo:load (for Turbo navigation)
document.addEventListener('turbo:load', initializeDeleteModal);
	</script>
{% endblock %}
