<div class="w-full h-full">
	<p class="text-primary-700 text-md font-semibold text-center mb-3">
		{{ 'RecitVie.page.published'|trans }}<br>
		{{ article.createdAt|date("d M Y") }}
	</p>
	<h1 class="text-3xl md:text-5xl font-semibold text-gray-900 text-center mb-8">{{ article.titre }}</h1>

	<div class="flex flex-wrap justify-center items-center gap-2 mb-8">
		{% for category in article.categories %}
			<span class="px-2 py-1 rounded-full text-sm font-medium {{ category.bgClass }} {{ category.textClass }}">
				{{ category.nom }}
			</span>
		{% endfor %}
	</div>
	<!-- Image de l'article -->
	{%  set src= asset('build/images/default/placeholder.jpg') %}
	{% if article.image %}
		{% set src = '/uploads/' ~ article.image.name %}
	{% endif %}

	<div class="flex justify-center items-center mb-8">
		<img src="{{ src }}" alt="{{ article.titre }}" class="w-full aspect-1/1 md:aspect-16/6 object-cover rounded-lg">
	</div>
	<article class="prose prose-lg max-w-none mt-8">
		<div class="text-editor-content">
			{{ article.content|raw }}
		</div>
	</article>
	<div class="w-full flex flex-wrap justify-center md:justify-between items-center gap-x-8 gap-y-2 mt-12 pt-4  border-t border-light-gray-100 ">
		<div class="flex flex-wrap items-center gap-2   ">
			<img src="{{ asset('build/images/icons/user.svg') }}" alt="Avatar" class="w-14 h-14 min-w-14 min-h-14 rounded-full">
			<div>
				<p class="text-gray-900 text-lg font-semibold w-fit">
					{% if article.createdBy %}
						{{ article.createdBy.prenom }}
						{{ article.createdBy.nom }}
					{% else %}
						Equipe Sfifa
					{% endif %}
				</p>
				{% if article.createdBy %}
					<p class="text-gray-600 text-md font-semibold w-fit">{% include 'common/job_title.html.twig' with {
                        'roles': article.createdBy.roles
                    } %}</p>
				{% endif %}
			</div>
		</div>
		{% include 'common/footer.actions.html.twig' with {
            'class': 'py-8 flex-wrap ',
            'title':  article.titre,
            'url': url('article_show', {'id': article.id}),
            'status': article.statut
        } %}
	</div>
</div>
