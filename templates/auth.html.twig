{% extends 'base.html.twig' %}

{% block body %}
	<div
		class="min-h-screen flex flex-col md:flex-row bg-gray-50/50">
		<!-- Form Section -->
		<div class="w-full md:w-1/2 min-h-screen bg-white flex flex-col justify-center px-6 sm:px-8 lg:px-20 py-8 relative z-10 shadow-2xl">
			<div class="max-w-md mx-auto w-full">


				<div
					class="flex-1">
					<!-- Mobile Logo -->
					<a href="{{ path('home') }}">
						<div class="md:hidden flex justify-center mb-8">
							<img src="{{ asset('build/images/logo-pink.svg') }}" alt="Logo" class="w-32 h-32">
						</div>
					</a>
					{% block content %}{% endblock %}
				</div>
			</div>
		</div>

		<!-- Visual Section -->
		<div
			class="hidden md:flex md:w-1/2 relative overflow-hidden bg-[linear-gradient(135deg,#FB7185_0%,#E11D48_100%)] items-center justify-center">
			<!-- Decorative Blobs -->
			<div class="absolute top-[-10%] right-[-10%] w-[500px] h-[500px] bg-white/10 rounded-full blur-3xl"></div>
			<div class="absolute bottom-[-10%] left-[-10%] w-[400px] h-[400px] bg-rose-900/20 rounded-full blur-3xl"></div>

			<a
				href="{{ path('home') }}" class="inline-flex items-center gap-2 group">
				<!-- Floating Elements -->
				<div class="relative z-10 text-center text-white px-12">
					<img src="{{ asset('build/images/logo.svg') }}" alt="Logo" class="w-48 h-48">
				</div>
			</a>
			<!-- Background Pattern -->
			<div class="absolute inset-0 opacity-10">
				<div class="absolute inset-0" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 35px, white 35px, white 36px);"></div>
				<div class="absolute inset-0" style="background-image: repeating-linear-gradient(-45deg, transparent, transparent 50px, white 50px, white 51px);"></div>
			</div>

			<!-- Random Decorative Lines -->
			<div class="absolute inset-0 overflow-hidden pointer-events-none opacity-20">
				<div class="absolute w-px h-64 bg-white rotate-[30deg] -top-12 left-[15%]"></div>
				<div class="absolute w-px h-96 bg-white rotate-[60deg] -bottom-24 left-[40%]"></div>
				<div class="absolute w-px h-64 bg-white rotate-[-45deg] top-1/2 right-[10%]"></div>
				<div class="absolute w-px h-48 bg-white rotate-[15deg] bottom-10 right-[30%]"></div>
			</div>
		</div>
	</div>

{% endblock %}
