{% extends 'base.html.twig' %}

{% block body %}
	<div
		class="min-h-screen flex flex-col md:flex-row bg-gray-50/50">
		<!-- Form Section -->
		<div class="w-full md:w-1/2 min-h-screen bg-white flex flex-col justify-center px-6 sm:px-12 lg:px-20 py-12 relative z-10 shadow-2xl">
			<div
				class="max-w-md mx-auto w-full">
				<!-- Logo/Branding -->
				<div class="mb-12">
					<a href="{{ path('app_home') }}" class="inline-flex items-center gap-2 group">
						<div class="w-10 h-10 bg-[#F43F5E] rounded-xl flex items-center justify-center shadow-lg group-hover:scale-105 transition-transform">
							<span class="text-white font-bold text-xl">أ</span>
						</div>
						<span class="text-2xl font-bold text-gray-900 font-amiri">أوال فيمينا</span>
					</a>
				</div>

				<div class="flex-1">
					{% block content %}{% endblock %}
				</div>
			</div>
		</div>

		<!-- Visual Section -->
		<div
			class="hidden md:flex md:w-1/2 relative overflow-hidden bg-[linear-gradient(135deg,#FB7185_0%,#E11D48_100%)] items-center justify-center">
			<!-- Decorative Blobs -->
			<div class="absolute top-[-10%] right-[-10%] w-[500px] h-[500px] bg-white/10 rounded-full blur-3xl"></div>
			<div class="absolute bottom-[-10%] left-[-10%] w-[400px] h-[400px] bg-rose-900/20 rounded-full blur-3xl"></div>

			<!-- Floating Elements -->
			<div class="relative z-10 text-center text-white px-12">
				<h2 class="text-5xl font-bold mb-6 font-amiri drop-shadow-lg leading-tight">أهلاً بك في عالم<br>أوال فيمينا</h2>
				<p class="text-rose-50 text-xl font-light max-w-sm mx-auto leading-relaxed opacity-90">
					انضمي إلى مجتمعنا الثقافي وشاركي في إثراء المحتوى النسائي العربي المتميز
				</p>
			</div>

			<!-- Pattern Overlay (Matches Landing Page) -->
			<div class="absolute inset-0 opacity-20" style="background-image: radial-gradient(circle, #fff 1px, transparent 1px); background-size: 24px 24px;"></div>
		</div>
	</div>

{% endblock %}
